<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
    <include>./_variables.xml</include>

    <!-- System Selection View (c64, pcengine, megadrive etc.) -->
    <view name="system">
        <carousel name="systemcarousel">
            <type>vertical</type>
            <pos>0 0</pos>
            <size>0.2 1</size>
        </carousel>

        <text name="systemInfo">
            <fontPath>./_assets/fonts/BuenosAiresNf-RAJE.ttf</fontPath>
            <color>FFFFFFFF</color>
            <fontSize>0.25</fontSize>
        </text>

    </view>

    <!--Detail
    View (Game Details, etc.)-->
    <view name="detailed">
        <textlist name="gamelist">
            <origin>1 0.5</origin>
            <pos>0.98 0.5</pos>
            <size>0.4 0.85</size>


            <selectedColor>${gold}</selectedColor>
            <selectorColor>${transparent}</selectorColor>

            <alignment>right</alignment>
        </textlist>
    </view>
</theme>