<theme>
    <formatVersion>7</formatVersion>

    <view name="system">
        
        <image name="background" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <color>FF0000FF</color>
        </image>
        
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <pos>0 0.4</pos>
            <size>1 0.2</size>
            <color>00000000</color> <logoScale>1.2</logoScale>
            <logoSize>0.2 0.2</logoSize>
            <maxLogoCount>3</maxLogoCount>
        </carousel>
        
        <text name="logoText">
            <pos>0 0.8</pos> <size>1 0.1</size>
            <text>SYSTEM VIEW WORKING</text>
            <fontSize>0.05</fontSize>
            <color>FFFFFFFF</color>
            <alignment>center</alignment>
        </text>
    </view>

    <view name="basic, detailed, video, grid">
        
        <image name="background" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <color>0000FFFF</color>
        </image>
        
        <textlist name="gamelist">
            <selectorColor>FFFFFF40</selectorColor>
            <selectedColor>FFFFFFFF</selectedColor>
            <primaryColor>CCCCCCFF</primaryColor>
        </textlist>
    </view>
</theme>
