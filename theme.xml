<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="detailed">
    <formatVersion>7</formatVersion>
    <include>./_variables.xml</include>

    <!-- Overlay for gamelist -->
    <view name="detailed">
        <image name="overlay" extra="true">
            <path>./_inc/images/overlay.png</path>
        </image>
    </view>


    <!-- Gamelist - DETAILED VIEW CORE -->
    <view name="detailed">
        <textlist name="gamelist">
            <pos>0.0 0.5</pos>
            <origin>0 0.5</origin>
            <size>0.29 0.845</size>
            <lines>15</lines>
            <horizontalMargin>0.03</horizontalMargin>

            <selectorImagePath>${selectorImage}</selectorImagePath>
            <selectorColor>FFFFFF</selectorColor>
            <selectedColor>${huskyGold}</selectedColor>

            <primaryColor>FFFFFF</primaryColor>
            <fontSize>0.038</fontSize>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>

            <glowColor>00000080</glowColor>
            <glowOffset>1</glowOffset>
            <glowSize>1</glowSize>
        </textlist>
    </view>

