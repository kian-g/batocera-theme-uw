<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
    <include>./_variables.xml</include>

    <view name="system">
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <!-- Display Off Screen -->
            <pos>2 2</pos>
        </carousel>

        <text name="systemInfo">
            <visible>false</visible>
        </text>

        <image name="white_background" extra="true">
            <origin>0 0</origin>
            <size>1 1</size>
            <path>./_assets/white.png</path>
        </image>

        <!-- <image name="uw_logo" extra="true">
            <origin>.5 .5</origin>
            <pos>.5 .5</pos>
            <size>.8 .8</size>

            <path>${uwLogo}</path>
        </image> -->

        <image name="background" extra="true">
            <path>./_assets/systems/${system.theme}.png</path>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.5</pos>
            <size>1 1</size>
            <zIndex>10</zIndex>
            <defaultImage>${placeholder}</defaultImage>
        </image>

        <sound name="bgsound">
            <path>./_assets/audio/background_lucie.mp3</path>
        </sound>
    </view>

    <view name="detailed, video">
        <textlist name="gamelist">
            <selectorColor>00000000</selectorColor>
            <selectedColor>b7a57a</selectedColor>
            <primaryColor>85754d</primaryColor>
            <origin>0 0.5</origin>
            <pos>0.115 0.49</pos>
            <size>0.36 0.83</size>
            <alignment>left</alignment>
            <fontSize>0.04</fontSize>
        </textlist>

        <image name="gold_outline" extra="true">
            <origin>.5 .5</origin>
            <size>.8 .85</size>
            <pos>0.5 .49</pos>
            <path>${outlineBox}</path>
            <zIndex>10</zIndex>
        </image>

        <image name="vertical_line" extra="true">
            <path>${verticalLine}</path>
            <origin>0 .5</origin>
            <pos>.4 .49</pos>
            <size>0 .85</size>
            <zIndex>10</zIndex>
        </image>

        <!-- Game image/video on right -->
        <video name="md_video">
            <pos>0.655 0.35</pos>
            <maxSize>0.45 0.50</maxSize>
            <origin>0.5 0.5</origin>
            <delay>1.0</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
            <zIndex>0</zIndex>
            <audio>false</audio>
        </video>

        <image name="uw_logo" extra="true">
            <path>${uwLogo}</path>
            <maxSize>0.08 0.08</maxSize>
            <origin>1 1</origin>
            <pos>.985 .9155</pos>
        </image>


    </view>

